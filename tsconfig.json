{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true
  },
  "include": [
    "src/**/*",
    "test/**/*",
    "example/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
